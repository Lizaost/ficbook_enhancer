{

  "description": "Adds a better dark theme and auto format for ficbook.net",
  "manifest_version": 1,
  "name": "Ficbook+",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "icons/ficbook_plus-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/ficbook_plus-32.png",
    "theme_icons": [{
      "light": "icons/ficbook_plus-32-light.png",
      "dark": "icons/ficbook_plus-32.png",
      "size": 32
    }],
    "default_title": "Ficbook+",
    "default_popup": "popup/ficbook_plus_menu.html"
  },

  "web_accessible_resources": [
    "images/*.jpg"
  ]

}

{

  "description": "Adds a better dark theme and auto format for ficbook.net",
  "manifest_version": 2,
  "name": "Ficbook+",
  "version": "1.0",
  "homepage_url": "https://github.com/Lizaost/ficbook_plus",
  "icons": {
    "48": "icons/ficbook_plus-48.jpg"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/ficbook_plus-32.jpg",
    "theme_icons": [{
      "light": "icons/ficbook_plus-32.jpg",
      "dark": "icons/ficbook_plus-32.jpg",
      "size": 32
    }],
    "default_title": "Ficbook+",
    "default_popup": "popup/fp_menu.html"
  },

  "web_accessible_resources": [
    "images/*.jpg"
  ]

}
